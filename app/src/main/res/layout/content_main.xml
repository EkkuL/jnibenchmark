<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.coffeeintocode.jnibenchmark.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/jni_msgView" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/jni_msgView"
        android:layout_alignParentStart="true"
        android:id="@+id/tableRow"></TableRow>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run Sieve"
        android:id="@+id/runsieve"
        android:layout_above="@+id/runstrcat"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run Random"
        android:id="@+id/runrandom"
        android:layout_above="@+id/runheap"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run heapsort"
        android:id="@+id/runheap"
        android:layout_above="@+id/runacker"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run MatrixMult"
        android:id="@+id/runmm"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heap Size"
        android:id="@+id/heapsize"
        android:layout_alignTop="@+id/runmm"
        android:layout_alignEnd="@+id/tableRow" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run strcat"
        android:id="@+id/runstrcat"
        android:layout_above="@+id/runrandom"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run nestedloop"
        android:id="@+id/runnl"
        android:layout_above="@+id/runmm"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run hash"
        android:id="@+id/runhash"
        android:layout_above="@+id/runsieve"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="run ackermann"
        android:id="@+id/runacker"
        android:layout_above="@+id/runnl"
        android:layout_alignParentStart="true" />
</RelativeLayout>
